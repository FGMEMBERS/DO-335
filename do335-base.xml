<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">

    <status>devel</status>
    <author>BARANGER Emmanuel</author>

    <fuel-fraction>1.0</fuel-fraction>

    <sound>
      <audible>true</audible>
      <path>Aircraft/DO-335/Sounds/do335-sound.xml</path>
    </sound>

    <model>
      <path>Aircraft/DO-335/Models/do335.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <submodels> 
      <serviceable type="bool">true</serviceable>
      <path>Aircraft/DO-335/Models/Effects/submodels.xml</path>
    </submodels>

    <startup>
      <splash-texture>Aircraft/DO-335/do335-splash.png</splash-texture>
    </startup>

    <virtual-cockpit archive="y">true</virtual-cockpit>
    <allow-toggle-cockpit archive="y">true</allow-toggle-cockpit>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
      </generic>
    </multiplay>

    <help>
      <title>Dornier Do 335</title>
      <key>
        <name>d</name>
        <desc>Open/Close canopy</desc>
      </key>
      <key>
        <name>D</name>
        <desc>Open/Close valves</desc>
      </key>
      <key>
        <name>e</name>
        <desc>Guns fire</desc>
      </key>
    </help>

    <menubar include="Dialogs/do335-menu.xml"/>

  </sim>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <running>true</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <running>true</running>
    </engine>
  </engines>

  <consumables>
    <fuel>
      <tank n="0">
        <tank-num type="int">0</tank-num>
        <level-gal_us archive="y">2070</level-gal_us>
      </tank>
    </fuel>
  </consumables>

  <input>
    <keyboard include="Nasal/do335-keyboard.xml"/>
  </input>

  <nasal>
    <do335>
      <file>Aircraft/DO-335/Nasal/doors.nas</file>
      <file>Aircraft/DO-335/Nasal/liveries.nas</file>
      <file>Aircraft/DO-335/Nasal/light.nas</file>
    </do335>
    <guns>
      <file>Aircraft/DO-335/Nasal/weapons.nas</file>
    </guns>
  </nasal>

</PropertyList>

